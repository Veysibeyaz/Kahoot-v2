{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "frontend/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "backend/src/index.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "backend/src/index.js"
    },
    {
      "src": "/api/quizzes/(.*)",
      "dest": "backend/src/index.js"
    },
    {
      "src": "/api/users/(.*)",
      "dest": "backend/src/index.js"
    },
    {
      "src": "/api/games/(.*)",
      "dest": "backend/src/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/src/index.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "backend/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}